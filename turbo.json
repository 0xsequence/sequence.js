{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": [
        "packages/**/*.tsx",
        "packages/**/*.ts",
        "repo/**/*.ts",
        "repo/**/*.tsx",
        "test/**/*.ts",
        "test/**/*.tsx",
        "test/**/*.mjs"
      ],
      "outputs": []
    },
    "clean": {
      "cache": false
    }
  }
}
