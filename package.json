{
  "name": "arcadeum.js",
  "version": "1.0.0",
  "description": "Javascript SDK library for the arcadeum meta-relayer",
  "main": "index.js",
  "scripts": {
    "test": "jest --ci --runInBand",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "lint:fixtslint": "tslint --project ./tsconfig.json --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arcadeum/arcadeum.js.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/arcadeum/arcadeum.js/issues"
  },
  "homepage": "https://github.com/arcadeum/arcadeum.js#readme",
  "dependencies": {
    "ethers": "^4.0.40"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/jest": "^25.1.4",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.9.1",
    "jest": "^25.1.0",
    "prettier": "^2.0.1",
    "ts-jest": "^25.2.1",
    "tslib": "^1.11.1",
    "tslint": "^6.1.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.8.3"
  },
  "jest": {
    "setupFiles": [],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts)$",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
