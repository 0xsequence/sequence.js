{
  "name": "@arcadeum/deployer",
  "version": "0.2.0",
  "description": "Library to deploy contracts via the universal deployer",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest --ci --runInBand",
    "prepublishOnly": "yarn test && yarn lint",
    "preversion": "yarn lint",
    "build": "rm -rf ./dist && rm -rf typings && buidler clean && yarn compile && yarn gen:typings && tsc -b",
    "compile": "buidler --max-memory 4096 compile",
    "gen:typings": "rm -f typings/contracts/* && typechain --target ethers-v5 --outDir typings/contracts './artifacts/*.json'",
    "lint:fix": "yarn run lint:fixtslint && yarn run lint:fixprettier",
    "lint:fixtslint": "tslint --project ./tsconfig.json --fix",
    "lint:fixprettier": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\""
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arcadeum/arcadeum.js.git"
  },
  "bugs": {
    "url": "https://github.com/arcadeum/arcadeum.js/issues"
  },
  "homepage": "https://github.com/arcadeum/arcadeum.js#readme",
  "devDependencies": {
    "@nomiclabs/buidler": "^1.3.0",
    "@nomiclabs/buidler-ethers": "^2.0.2",
    "@nomiclabs/buidler-truffle5": "^1.2.0",
    "@nomiclabs/buidler-web3": "^1.3.4",
    "@typechain/ethers-v5": "^1.0.0",
    "@types/jest": "^25.2.3",
    "@types/node": "^14.11.8",
    "dotenv": "^8.2.0",
    "ethers": "^5.0.17",
    "jest": "^26.0.1",
    "ora": "^5.1.0",
    "prettier": "^2.0.1",
    "ts-jest": "^26.0.0",
    "tslint": "^6.1.0",
    "tslint-config-prettier": "^1.18.0",
    "typechain": "^2.0.1",
    "typechain-target-ethers-v5": "^1.2.2",
    "typescript": "^4.0.2"
  },
  "jest": {
    "setupFiles": [],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts)$",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "directories": {
    "test": "tests"
  },
  "dependencies": {},
  "keywords": [
    "ethereum",
    "ethers",
    "contract",
    "deploy",
    "chains"
  ],
  "author": "Philippe Castonguay, Agustin Aguilar"
}
