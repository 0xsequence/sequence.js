{
  "name": "@0xsequence/tests",
  "version": "0.43.4",
  "description": "test tools for sequence.js",
  "repository": "https://github.com/0xsequence/sequence.js/tree/master/packages/tests",
  "source": "src/index.ts",
  "main": "dist/0xsequence-tests.cjs.js",
  "module": "dist/0xsequence-tests.esm.js",
  "author": "Horizon Blockchain Games",
  "license": "Apache-2.0",
  "scripts": {
    "test": "yarn test:concurrently 'yarn test:run'",
    "test:run": "yarn test:file tests/**/*.spec.ts",
    "test:file": "TS_NODE_PROJECT=../../tsconfig.test.json mocha -r ts-node/register --timeout 30000",
    "test:concurrently": "concurrently -k --success first 'yarn start:hardhat2 > /dev/null'",
    "start:hardhat2": "yarn run hardhat node --hostname 0.0.0.0 --port 7047 --config ./hardhat2.config.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@0xsequence/core": "^0.43.4"
  },
  "peerDependencies": {
    "ethers": ">=5.5"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "ethers": "^5.7.2",
    "web3": "^1.8.1"
  },
  "files": [
    "src",
    "dist"
  ]
}
