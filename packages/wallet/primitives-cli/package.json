  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:^",
    "@types/node": "^22.10.9",
    "@types/yargs": "^17.0.33",
    "concurrently": "^8.2.2",
    "esbuild": "^0.24.2",
    "nodemon": "^3.1.0",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@0xsequence/wallet-primitives": "workspace:^",
    "ox": "^0.6.7",
    "yargs": "^17.7.2"
  }
}
