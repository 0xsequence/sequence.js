{
  "name": "0xsequence",
  "version": "0.7.0",
  "description": "A simple & powerful development stack for Ethereum",
  "source": "src/index.ts",
  "main": "dist/0xsequence.cjs.js",
  "module": "dist/0xsequence.esm.js",
  "umd:main": "dist/0xsequence.umd.min.js",
  "license": "Apache-2.0",
  "scripts": {
    "test": "yarn test:concurrently 'yarn test:run'",
    "test:run": "TS_NODE_PROJECT=../../tsconfig.test.json ava --fail-fast --timeout 3m",
    "test:only": "yarn test:run --match",
    "test:watch": "yarn test:run --watch",
    "test:server": "webpack-dev-server --config tests/webpack.config.js",
    "test:server2": "PORT=8888 webpack-dev-server --config tests/webpack.config.js",
    "test:concurrently": "concurrently -k --success first 'yarn test:server' 'yarn start:hardhat'",
    "start:hardhat": "yarn run hardhat node",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@0xsequence/abi": "^0.7.0",
    "@0xsequence/provider": "^0.7.0",
    "@0xsequence/wallet": "^0.7.0",
    "ethers": "^5.0.24"
  },
  "peerDependencies": {
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.12.1",
    "babel-loader": "^8.2.1",
    "html-webpack-plugin": "^5.0.0-alpha.14",
    "webpack": "^5.6.0",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.11.0"
  },
  "keywords": [],
  "preconstruct": {
    "umdName": "0xsequence"
  },
  "files": [
    "src",
    "dist"
  ],
  "ava": {
    "require": [
      "ts-node/register"
    ],
    "files": [
      "tests/**/*.spec.ts"
    ],
    "extensions": [
      "ts"
    ],
    "verbose": true
  }
}
