  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["dom.iterable", "dom", "es2020"],
    "types": ["node", "mocha", "puppeteer"]
